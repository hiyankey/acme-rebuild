{
    "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
    "extends": ["ultracite"],
    "organizeImports": {
      "enabled": true
    },
    "json": {
      "parser": {
        "allowComments": true
      }
    },
    "vcs": {
      "enabled": true,
      "clientKind": "git",
      "useIgnoreFile": true
    },
    "linter": {
      "enabled": true,
      "rules": {
        "recommended": true
      }
    }
  }